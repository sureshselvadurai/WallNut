<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/bgView"
        android:layout_width="416dp"
        android:layout_height="123dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="420dp"
        android:layout_height="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/DisplayView"
        android:layout_width="420dp"
        android:layout_height="474dp"
        android:paddingTop="0dp"
        android:backgroundTint="@color/llteal"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bgView"
        app:layout_constraintVertical_bias="1.0">

        <View
            android:id="@+id/view2"
            android:layout_width="420dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.wallnut.adapter.PieChartItemView
            android:id="@+id/PieChartViewItem"
            android:layout_width="218dp"
            android:layout_height="199dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="187dp"
            android:layout_height="199dp"
            android:layout_marginEnd="8dp"
            android:background="@color/lgreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/textView"
                android:layout_width="128dp"
                android:layout_height="31dp"
                android:fontFamily="@font/josefinsanssemibold"
                android:gravity="center"
                android:text="@string/spend_report"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/montserratregular"
                android:text="@string/loan_emi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/loan_spend_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/montserratregular"
                android:text="@string/_0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/montserratregular"
                android:layout_marginTop="12dp"
                android:text="@string/utilities"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/utilities_spend_view"
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="@string/_0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loan_spend_view" />

            <TextView
                android:id="@+id/food_spend_view"
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="@string/_0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/utilities_spend_view" />

            <TextView
                android:id="@+id/entertainment_spend_view"
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="@string/_0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/food_spend_view" />

            <TextView
                android:id="@+id/total_income_report_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="@string/_0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/entertainment_spend_view" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="@string/food"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="@string/entertainment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratregular"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="@string/income"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="202dp"
            android:layout_height="114dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/savings_and_budget_reprt"
                android:gravity="center"
                android:fontFamily="@font/josefinsanssemibold"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:fontFamily="@font/josefinsanslight"
                android:textSize="12sp"
                android:text="@string/amount_saved"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:fontFamily="@font/josefinsanslight"
                android:textSize="12sp"
                android:text="@string/budget_remaining"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:fontFamily="@font/josefinsanslight"
                android:textSize="12sp"
                android:text="@string/safe_spend_per_day"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />

            <TextView
                android:id="@+id/savings_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/_0"
                android:gravity="center"
                android:fontFamily="@font/montserratregular"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <TextView
                android:id="@+id/remaining_budget_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/_0"
                android:gravity="center"
                android:fontFamily="@font/montserratregular"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/savings_view" />

            <TextView
                android:id="@+id/safe_spend_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="8dp"
                android:text="@string/_0"
                android:gravity="center"
                android:fontFamily="@font/montserratregular"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="194dp"
            android:layout_height="114dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/lred"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="147dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="80dp"
                android:text="@string/study_recommends_20_savings_n_your_current_savings"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/savings_percent_view"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="@string/_100"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/previous_month_report"
                android:layout_width="175dp"
                android:layout_height="41dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"
                android:text="@string/no_monthly_trend_available"
                android:gravity="center"
                android:fontFamily="@font/montserratregular"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="169dp"
                android:layout_height="23dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:fontFamily="@font/josefinsanssemibold"
                android:text="@string/monthly_change_trend"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="388dp"
            android:layout_height="105dp"
            android:background="@drawable/border_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2">

            <TextView
                android:id="@+id/reminder_view"
                android:layout_width="367dp"
                android:layout_height="65dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/montserratregular"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:scrollbars="vertical"
                android:text="@string/none"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.592"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="14sp"
                android:text="@string/bill_reminders"
                android:fontFamily="@font/josefinsanssemibold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/refresh_button"
        android:layout_width="35dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/baseline_post_add_24"
        android:gravity="center"
        android:tooltipText="Refresh Messages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgView" />


    <TextView
        android:id="@+id/net_balance_view"
        android:layout_width="178dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/montserratregular"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/bgView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/set_budget_button"
        android:layout_width="35dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/baseline_mode_edit_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="409dp"
        android:layout_height="45dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/total_spends_view"
        android:layout_width="185dp"
        android:layout_height="17dp"
        android:paddingStart="11dp"
        android:fontFamily="@font/montserratregular"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/total_income_view"
        android:layout_width="185dp"
        android:layout_height="17dp"
        android:fontFamily="@font/montserratregular"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="@+id/view" />


    <TextView
        android:id="@+id/budget_percent_text"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:fontFamily="@font/montserratregular"
        android:gravity="center"
        android:text="@string/percent"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/DisplayView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar"
        app:layout_constraintTop_toBottomOf="@+id/budget_set_view" />

    <TextView
        android:id="@+id/budget_set_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:background="@color/lteal"
        android:fontFamily="@font/montserratregular"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:text="@string/budget_not_set"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgView" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="341dp"
        android:layout_height="38dp"
        android:layout_marginEnd="52dp"
        android:max="100"
        android:progressTint="@color/green"
        android:backgroundTint="@color/llteal"
        app:layout_constraintBottom_toTopOf="@+id/DisplayView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/budget_set_view" />


</androidx.constraintlayout.widget.ConstraintLayout>


